{
  "name": "thoth-desktop",
  "version": "1.0.0",
  "description": "AI-powered shift scheduling assistant",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && xcopy /Y /I assets\\tray-icon.png build\\",
    "build:electron": "tsc -p tsconfig.electron.json",
    "watch:electron": "tsc -p tsconfig.electron.json --watch",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron dist/electron/main.js",
    "electron-dev": "npm run build:electron && concurrently \"npm start\" \"wait-on http://localhost:3000 && electron dist/electron/main.js\"",
    "electron-build": "npm run build && electron-builder",
    "electron-pack": "electron-builder --dir",
    "electron-dist": "electron-builder",
    "dev": "npm run electron-dev"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^7.6.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.thoth.app",
    "productName": "Thoth",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/electron/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "overrides": {
    "tar": "^7.5.3",
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31",
    "webpack-dev-server": "^5.2.1",
    "tmp": "^0.2.4"
  }
}
