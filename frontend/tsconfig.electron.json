{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/electron",
    "rootDir": "./electron",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "electron/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}